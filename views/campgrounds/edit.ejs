<%- layout("./layouts/boilerplate") %>
<div class="row">
    <h1 class="text-center">Edit a campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= currCampground._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Title</label>
                <input class="form-control" type="text" name="campground[title]" id = "name" value="<%= currCampground.title %>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id = "location" value="<%= currCampground.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price per night</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input class="form-control" type="text" name="campground[price]" id = "price" placeholder="0.00" value="<%= currCampground.price.slice(1) %>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="5" required><%= currCampground.description %></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Upload Images</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                </div>
            </div>
            <div class="mb-3 d-flex flex-wrap">
                <!-- <ul class="list-group"> -->
                    <% currCampground.images.forEach(function(img, index) { %>
                        <div class="p-1 flex-fill">
                        <!-- <li class="list-group-item"> -->
                            <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox-<%= index %>" name="deleteImages[]" value="<%= img.filename %>">
                                <label class="form-check-label" for="inlineCheckbox-<%= index %>">Delete</label>
                            </div>
                        <!-- </li> -->
                        </div>
                    <% }) %> 
                <!-- </ul> -->
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Update Campground</button>
            </div>

        </form>
        <a href="/campgrounds/<%= currCampground._id %>">go back</a>
    </div>
</div>